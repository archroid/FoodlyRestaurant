<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.Activity.NetErrorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            >

            <ImageView
                android:id="@+id/iv_wifi"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_no_wifi_2"
                />

            <ImageView
                android:id="@+id/iv_dnd"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_no_wifi_1" />


            <TextView
                android:id="@+id/tv_noInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_dnd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Whoops!"
                android:textColor="@color/foreground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tv_noInternet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_noInternet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Slow or no intenet connections. \n Please check your internet settings"
                android:textColor="@color/foreground"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_noInternet2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/background_button2"
                android:text="Try Again"
                android:textAllCaps="false"
                android:textColor="@color/foreground"
                android:textSize="17sp" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>