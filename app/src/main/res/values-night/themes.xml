<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodlyRestaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/currentLine</item>
        <item name="colorPrimaryVariant">@color/currentLine</item>
        <item name="colorOnPrimary">@color/foreground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/foreground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/currentLine</item>
        <item name="fontFamily">@font/ubuntu</item>

        <!-- Nav bar color. -->
        <item name="android:navigationBarColor">@color/currentLine</item>

    </style>

    <style name="AuthActivityTheme" parent="Theme.FoodlyRestaurant">
        <item name="android:statusBarColor">@color/bg_yellow</item>
        <item name="android:navigationBarColor">@color/bg_yellow</item>
        <item name="android:isLightTheme" tools:targetApi="q">true</item>
    </style>
</resources>